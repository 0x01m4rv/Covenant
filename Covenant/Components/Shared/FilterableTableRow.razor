@typeparam TItem

@if (this.IsDisplayed.Invoke(this.Item, this.CovenantTable.SearchTerm))
{
    <tr @attributes="InputAttributes">
        @RowContent
    </tr>
}

@code {
    [CascadingParameter]
    public CovenantTable<TItem> CovenantTable { get; set; }

    [Parameter]
    public TItem Item { get; set; }

    [Parameter]
    public Func<TItem, string, bool> IsDisplayed { get; set; }

    [Parameter]
    public RenderFragment RowContent { get; set; }

    [Parameter(CaptureUnmatchedValues = true)]
    public Dictionary<string, object> InputAttributes { get; set; }
}
